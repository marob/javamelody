<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xmlns:aop="http://www.springframework.org/schema/aop"
	   xmlns:neo4j="http://www.springframework.org/schema/data/neo4j"
	   xsi:schemaLocation="
			http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
			http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
			http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
			http://www.springframework.org/schema/data/neo4j http://www.springframework.org/schema/data/neo4j/spring-neo4j.xsd">
	
	<bean name="springTestFacade" class="net.bull.javamelody.SpringTestFacadeImpl" />
	<bean name="annotatedTestClassSpring" class="net.bull.javamelody.TestMonitoringSpringInterceptor$AnnotatedTestClass" />
	<bean name="annotatedTestClassSpring2" class="net.bull.javamelody.TestMonitoringSpringInterceptor$AnnotatedTestClass2" />
	<bean name="annotatedTestOtherClassSpring" class="net.bull.javamelody.TestMonitoringSpringInterceptor$AnnotatedTestOtherClass" />
	<bean name="annotatedTestMethodSpring" class="net.bull.javamelody.TestMonitoringSpringInterceptor$AnnotatedTestMethod" />

	<bean id="facadeMonitoringAdvisor" class="net.bull.javamelody.MonitoringSpringAdvisor">
		<property name="pointcut">
			<bean class="net.bull.javamelody.MonitoredWithInterfacePointcut">
				<property name="interfaceName" value="net.bull.javamelody.SpringTestFacade" />
			</bean>
		</property>
	</bean>
    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
    <!--
        <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://127.0.0.1:3306/test?socketTimeout=5000&amp;connectTimeout=5000" />
        <property name="username" value="root" />
        <property name="password" value="root" />
	-->
        <property name="driverClassName" value="org.h2.Driver"/>
        <property name="url" value="jdbc:h2:./target/h2/test-webapp" />
        <property name="username" value="sa" />
        <property name="password" value="" />
        <property name="maxIdle" value="13" />
    </bean>
	<bean id="wrappedDataSource" class="net.bull.javamelody.SpringDataSourceFactoryBean">
		<property name="targetName" value="dataSource" />
	</bean>
    <!--
    <bean id="dataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
		<property name="jndiName" value="java:comp/env/jdbc/TestDB" />
	</bean>
	-->
    <bean id="dataSource2" class="org.springframework.jndi.JndiObjectFactoryBean">
		<property name="jndiName" value="java:comp/env/jdbc/TestDB" />
		<property name="lookupOnStartup" value="false" />
		<property name="expectedType" value="javax.sql.DataSource" />
	</bean>

	<bean id="springDataSourceBeanPostProcessor2" class="net.bull.javamelody.SpringDataSourceBeanPostProcessor">
		<property name="excludedDatasources">
			<set>
				<value>dataSource</value>
				<value>dataSource2</value>
			</set>
		</property>
	</bean>

	<!--context:spring-configured/-->
	<context:annotation-config/>
	<context:component-scan base-package="net.bull.javamelody.neo4j" />
	<aop:aspectj-autoproxy />

	<bean id="graphDatabaseFactoryEmbedded" class="org.neo4j.graphdb.factory.GraphDatabaseFactory" />
	<bean id="graphDatabaseService" class="org.neo4j.graphdb.GraphDatabaseService"
		  factory-bean="graphDatabaseFactoryEmbedded" factory-method="newEmbeddedDatabase"
		  destroy-method="shutdown">
		<constructor-arg index="0" value="target/neo4j-db-plain" />
	</bean>
	<neo4j:config base-package="net.bull.javamelody.neo4j.domain"
				  graphDatabaseService="graphDatabaseService" />
	<neo4j:repositories base-package="net.bull.javamelody.neo4j.repository" />
</beans>
